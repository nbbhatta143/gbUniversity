@model GroupBCapstoneProject.Models.AddCourse_vm

@using GroupBCapstoneProject.Data;

@{
    ViewData["Title"] = "AddCourse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddCourse</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCourse">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseNumber" class="control-label"></label>
                <input asp-for="CourseNumber" class="form-control" />
                <span asp-validation-for="CourseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SectionNumber" class="control-label"></label>
                <input asp-for="SectionNumber" class="form-control" />
                <span asp-validation-for="SectionNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enrollment" class="control-label"></label>
                <input asp-for="Enrollment" class="form-control" />
                <span asp-validation-for="Enrollment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacultyID" class="control-label"></label>

                <select id="SelectFacultyList">
                    @foreach (Faculty faculty in ViewBag.listOfFaculty)
                    {
                        <option value="@faculty.ID">@String.Join(" ", faculty.FirstName, faculty.LastName)</option>
                    }
                </select>
                <input asp-for="FacultyID" class="form-control" id="inputForFaculty" hidden />
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreditHours" class="control-label"></label>
                <input asp-for="CreditHours" class="form-control" />
                <span asp-validation-for="CreditHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuildingName" class="control-label"></label>
                <input asp-for="BuildingName" class="form-control" />
                <span asp-validation-for="BuildingName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuildingNumber" class="control-label"></label>
                <input asp-for="BuildingNumber" class="form-control" />
                <span asp-validation-for="BuildingNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MeetsOnMonday" /> @Html.DisplayNameFor(model => model.MeetsOnMonday)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MeetsOnTuesday" /> @Html.DisplayNameFor(model => model.MeetsOnTuesday)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MeetsOnWednesday" /> @Html.DisplayNameFor(model => model.MeetsOnWednesday)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MeetsOnThursday" /> @Html.DisplayNameFor(model => model.MeetsOnThursday)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MeetsOnFriday" /> @Html.DisplayNameFor(model => model.MeetsOnFriday)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MeetsOnSaturday" /> @Html.DisplayNameFor(model => model.MeetsOnSaturday)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" onclick="SetFacultyID()" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


<script>
    function SetFacultyID() {
        selectedFaculty = document.querySelector("#SelectFacultyList");

        faculty = selectedFaculty.value;
        document.querySelector("#inputForFaculty").value = faculty;
    }

</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
