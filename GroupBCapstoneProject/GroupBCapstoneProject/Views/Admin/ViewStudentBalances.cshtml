@using GroupBCapstoneProject.Data

@{
    <div id="View Balances">
        <h4>Student Balances</h4>
        <div class="col-md-12">
            <div class="row" style="font-weight: bold">
                <div class="col-md-3">First Name</div>
                <div class="col-md-3">Last Name</div>
                <div class="col-md-3">Balance</div>
                <div class="offset-3"></div>
            </div>

            <div class="row">
                @foreach (Student student in ViewBag.listOfStudents)
                {
                    <div class="col-md-3">@student.FirstName</div>
                    <div class="col-md-3">@student.LastName</div>
                    <div class="col-md-3">@student.Balance</div>
                    <div class="offset-3"></div>
                }
            </div>
        </div>
    </div>
}
