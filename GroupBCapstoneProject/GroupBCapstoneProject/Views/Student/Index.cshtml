@using GroupBCapstoneProject.Data;

@{ 
    <div>
        <h2>Upcoming Events and Activities</h2>
        <ul>
            <li><a href="@Url.Content("~/events/Art Festival.png")">Art Festival</a></li>
            <li><a href="@Url.Content("~/events/Bake SaleEdit.png")">Bake Sale</a></li>
            <li><a href="@Url.Content("~/events/Basketball Game.png")">Basketball Game</a></li>
            <li><a href="@Url.Content("~/events/Boomwackers.png")">Boomwackers</a></li>
            <li><a href="@Url.Content("~/events/Cheer Tryouts.png")">Cheer Tryouts</a></li>
            <li><a href="@Url.Content("~/events/Chess Club.png")">Chess Club</a></li>
            <li><a href="@Url.Content("~/events/Football Tryouts.png")">Football Tryouts</a></li>
            <li><a href="@Url.Content("~/events/Ice Cream Party.png")">Ice Cream Party</a></li>
            <li><a href="@Url.Content("~/events/Open Mic at Cafe.png")">Open Mic at Cafe</a></li>
            <li><a href="@Url.Content("~/events/Theatre Club Show.png")">Theatre Club Show</a></li>
        </ul>

        <div><p>Your current balance is $@ViewData["StudentBalance"]</p></div>

        <h2>Enrolled Classes</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Course Number</th>
                    <th>Section Number</th>
                    <th>Faculty</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Credit Hours</th>
                    <th>Building Name</th>
                    <th>Building Number</th>
                    <th>Meets on Monday</th>
                    <th>Meets on Tuesday</th>
                    <th>Meets on Wednesday</th>
                    <th>Meets on Thursday</th>
                    <th>Meets on Friday</th>
                    <th>Meets on Saturday</th>
                </tr>
            </thead>
            <tbody>
                @foreach (CourseForRegistration course in ViewBag.studentEnrollments)
                {
                    <tr>
                        <td>@course.CourseNumber</td>
                        <td>@course.SectionNumber</td>
                        <td>@course.Faculty</td>
                        <td>
                            @if (course.StartTime.HasValue)
                            {
                                @course.StartTime.Value.ToString("T");
                            }
                            else
                            { @course.StartTime.ToString();
                        }
                        </td>
                        <td>
                            @if (course.EndTime.HasValue)
                            {
                                @course.EndTime.Value.ToString("T");
                            }
                            else
                            { @course.EndTime.ToString();
                        }
                        </td>
                        <td>@course.CreditHours</td>
                        <td>@course.BuildingName</td>
                        <td>@course.BuildingNumber</td>
                        <td>@course.DisplayMonday()</td>
                        <td>@course.DisplayTuesday()</td>
                        <td>@course.DisplayWednesday()</td>
                        <td>@course.DisplayThursday()</td>
                        <td>@course.DisplayFriday()</td>
                        <td>@course.DisplaySaturday()</td>
                    </tr>

                }
            </tbody>
        </table>

        <div style="padding-top: 15px;"><h3>Register for classes, drop classes, or make a payment</h3></div>
        @using (Html.BeginForm("Index", "Student", FormMethod.Post))
        {
            <input type="submit" value="Sign up for a class" class="btn btn-dark" name="btnSubmit" />
            <input type="submit" value="Drop a class" class="btn btn-danger" name="btnSubmit" />
            <input type="submit" value="Make a Payment" class="btn btn-dark" name="btnSubmit" />


        }
    </div>
}
